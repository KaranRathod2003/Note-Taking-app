<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- <link rel="stylesheet" href="/stylesheets/style.css"> -->
</head>
<body>
    <div class="main bg-zinc-800 max-w-full min-h-screen text-white " >
        <div class="form p-10">
            <form action="/create" method="post">
                <input type="text" name="title" placeholder="Add task..." class="block w-full outline-none  rounded-md px-5 py-2 bg-zinc-600">
                <textarea name="details" placeholder="Add Details..." class="block  w-full outline-none rounded-md mt-2 px-5 py-2 bg-zinc-600 resize-none"></textarea>
                <input type="submit" class="mt-2 rounded-md bg-blue-700 px-5 py-2">
            </form>
        </div>
        <div class="tasks p-10 flex gap-3 flex-wrap">
            <% if (files.length > 0){ %>
                <% files.forEach(function(val){ %>
                    <div class="task min-w-72 px-3 py-4 bg-zinc-600 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex justify-between">
                            <a class="inline-block text-blue-300 mt-3" href="/file/<%= val %>">Read More</a>
                            <a class="inline-block text-blue-300 mt-3" href="/edit/<%= val %>">Edit Filename</a>
                        </div>
                    </div>
                    <% }) %>
           <% } else { %>
                <h2 class="text-zinc-300">No Task yet</h2>
            <% }%>
        </div>
    </div>
</body>
</html>